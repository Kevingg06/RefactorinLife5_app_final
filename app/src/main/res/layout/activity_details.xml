<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.viewItem.presenter.activity.DetailsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/details_gl_leftBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.17031631" />

    <LinearLayout
        android:id="@+id/details_linearLayout_leftbar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#FF7353B9"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/details_gl_leftBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/details_tv_images"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:paddingTop="50dp"
            android:gravity="left"
            android:rotation="-90"
            android:singleLine="true"
            android:text="Imagenes"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/details_tv_description"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:paddingTop="50dp"
            android:gravity="left"
            android:text="Descripción"
            android:textColor="@color/white"
            android:rotation="-90"
            android:textSize="16sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/details_tv_financing"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:paddingTop="50dp"
            android:gravity="left"
            android:text="Financiación"
            android:textColor="@color/white"
            android:rotation="-90"
            android:textSize="16sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/details_tv_comments"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:paddingTop="50dp"
            android:gravity="left"
            android:text="Comentarios"
            android:textColor="@color/white"
            android:rotation="-90"
            android:textSize="16sp"
            android:singleLine="true" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/item_view_fragment"
        android:name="com.example.myapplication.ui.imagenes.presenter.ImageFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/details_gl_leftBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/details_circle_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/circle_violet"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:visibility="gone"/>

        <View
            android:id="@+id/details_circle_descrption"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/circle_violet"
            android:layout_marginStart="50dp"
            android:layout_marginTop="305dp"
            android:visibility="gone"/>

        <View
            android:id="@+id/details_circle_financing"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/circle_violet"
            android:layout_marginStart="50dp"
            android:layout_marginTop="495dp"
            android:visibility="gone"/>

        <View
            android:id="@+id/details_circle_comments"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/circle_violet"
            android:layout_marginStart="50dp"
            android:layout_marginTop="690dp"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
